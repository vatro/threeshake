{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": "off",
        "camelcase": "off",
        "space-before-function-paren": "off",
        "no-tabs": "off",
        "no-debugger": 1,
        "spaced-comment": "off",

        // turning on / off annoying / distracting stuff
        "padded-blocks": "off",
        "no-trailing-spaces": "off",
        "no-empty": "off",
        "keyword-spacing" : "off",
        "object-curly-spacing": "off"
    }
}
